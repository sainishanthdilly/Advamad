<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raywenderlich.camelot.QuesAndSurvey">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/swipe"
        >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fb968a"
>

    <TextView
        android:text="Questions of Study:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTextNameStudy"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textAppearance="@anim/rsb_slide_in_left"
        android:textStyle="normal|bold"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/saved_recycler1" />


</LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/navigationView"
        android:layout_height="match_parent"
        app:menu="@menu/navbar"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
